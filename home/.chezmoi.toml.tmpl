# chezmoi.toml -*- mode: toml -*-

# Question mark at the end not required. Chezmoi adds its own.
{{- $emacs           := promptBool "Want to build emacs" -}}
{{- $personalmachine := promptBool "Is it personal machine" -}}

{{/* wsl detection */}}
{{- $wsl            := false -}}{{/* wsl 1/2 */}}
{{- $wsl1           := false -}}{{/* wsl 1 */}}
{{- $wsl2           := false -}}{{/* wsl 2 */}}
{{- if (env "WSL_DISTRO_NAME") -}}
{{- $wsl = true -}}
{{- end -}}
{{- if and $wsl (env "WSL_INTEROP" | not) -}}
{{- $wsl1 = true -}}
{{- end -}}
{{- if and $wsl (env "WSL_INTEROP") -}}
{{- $wsl2 = true -}}
{{- end }}

{{/* arch or ubuntu */}}
{{- $archlinux      := false -}}
{{- $ubuntu         := true -}}
{{- if eq .chezmoi.osRelease.name "Arch Linux" }}
{{- $archlinux = true -}}
{{- $ubuntu = false -}}
{{- end -}}

[data]
  emacs = {{ $emacs }}
  personalmachine = {{ $personalmachine }}
  wsl = {{ $wsl }}
  wsl1 = {{ $wsl1 }}
  wsl2 = {{ $wsl2 }}
  archlinux = {{ $archlinux }}
  ubuntu = {{ $ubuntu }}

