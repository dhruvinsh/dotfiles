# If you come from bash you might have to change your $PATH.
{{- $paths := list }}
{{- $homeDir := .chezmoi.homeDir }}
{{- range $_, $relPath := list "bin" "go/bin" ".cargo/bin" ".local/bin" ".local/share/bob/nvim-bin" }}
{{-    $path := joinPath $homeDir $relPath }}
{{-   if stat $path }}
{{-     $paths = mustAppend $paths $path }}
{{-   end }}
{{- end }}
{{- if $paths }}
export PATH={{ toStrings $paths | join ":" }}:$PATH
{{- end }}

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Uncomment the following line to use case-sensitive completion.
CASE_SENSITIVE="true"

# Uncomment the following line to disable bi-weekly auto-update checks.
DISABLE_AUTO_UPDATE="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
HIST_STAMPS="yyyy-mm-dd"

ZSH_DISABLE_COMPFIX=true

# starship
export STARSHIP_CONFIG=~/.config/starship/starship.toml
eval "$(starship init zsh)"

# fzf setup
eval "$(fzf --zsh)"
# unset FZF_DEFAULT_OPTS if any
[[ -z $FZF_DEFAULT_OPTS ]] || unset FZF_DEFAULT_OPTS
export FZF_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden --follow --exclude .git'
export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
  --highlight-line \
  --info=inline-right \
  --ansi \
  --layout=reverse \
  --border=none \
"

export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
  --color=bg+:{{ .colorScheme.selection_bg }} \
  --color=bg:{{ .colorScheme.background }} \
  --color=border:{{ index .colorScheme.brights 4 }} \
  --color=fg: {{ .colorScheme.foreground }} \
  --color=gutter:{{ .colorScheme.background }} \
  --color=header:{{ get .colorScheme.indexed "16" }} \
  --color=hl+:{{ index .colorScheme.brights 4 }} \
  --color=hl:{{ index .colorScheme.brights 4 }} \
  --color=info:{{ index .colorScheme.brights 5 }} \
  --color=marker:{{ index .colorScheme.brights 1 }} \
  --color=pointer:{{ index .colorScheme.brights 1 }} \
  --color=prompt:{{ index .colorScheme.brights 4 }} \
  --color=query:{{ .colorScheme.foreground }}:regular \
  --color=scrollbar:{{ index .colorScheme.ansi 4 }} \
  --color=separator:{{ get .colorScheme.indexed "16" }} \
  --color=spinner:{{ index .colorScheme.brights 1 }} \
"

export NVIM_COLORSCHEME={{ .colorScheme.name }}

DISABLE_AUTO_UPDATE="true"

plugins=(
  {{- if eq .chezmoi.os "darwin"}}
  brew
  {{ end -}}
  git
  zoxide
  zsh-syntax-highlighting
  zsh-autosuggestions
  zsh-completions
)

# zsh-completions setup
fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src

source $ZSH/oh-my-zsh.sh

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export EDITOR='nvim'
{{- if eq .chezmoi.os "darwin" }}
export HOMEBREW_NO_AUTO_UPDATE=1
{{- end }}

alias vim=nvim
alias lg=lazygit

# Direnv Setup
eval "$(direnv hook zsh)"

# Atuin Setup
eval "$(atuin init zsh)"

# pyenv require for interactive shells
if [ -d "$HOME/.pyenv" ]; then
  export PYENV_ROOT="$HOME/.pyenv"
  export PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init -)"
fi

# volta setup
export VOLTA_HOME="$HOME/.volta"
export PATH="$VOLTA_HOME/bin:$PATH"

{{- if .wsl }}
# https://github.com/microsoft/wslg/wiki/GPU-selection-in-WSLg
export MESA_D3D12_DEFAULT_ADAPTER_NAME=NVIDIA
export PATH=/usr/lib/wsl/lib:$PATH
{{- end}}

{{- /* vim: set filetype=zsh ts=2 sw=2: */}}
