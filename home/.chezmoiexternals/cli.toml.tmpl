{{ if eq .chezmoi.os "linux" }}

{{- $atuinVersionTag := (gitHubLatestRelease "atuinsh/atuin").TagName }}
[".local/bin/atuin"]
  type = "archive-file"
  url  = "https://github.com/atuinsh/atuin/releases/download/{{ $atuinVersionTag }}/atuin-{{ $atuinVersionTag }}-x86_64-unknown-linux-gnu.tar.gz"
  executable = true
  stripComponents = 1
  path = "atuin"

{{- $deltaVersionTag := (gitHubLatestRelease "dandavison/delta").TagName }}
[".local/bin/delta"]
  type = "archive-file"
  url  = "https://github.com/dandavison/delta/releases/download/{{ $deltaVersionTag }}/delta-{{ $deltaVersionTag }}-x86_64-unknown-linux-musl.tar.gz"
  executable = true
  stripComponents = 1
  path = "delta"

{{- $fswatchVersionTag := (gitHubLatestRelease "dhruvinsh/fswatch").TagName }}
[".local/bin/fswatch"]
  type = "file"
  url  = "https://github.com/dhruvinsh/fswatch/releases/download/{{ $fswatchVersionTag }}/fswatch"
  executable = true

[".local/bin/fzf"]
  type = "archive-file"
  url  = {{ gitHubLatestReleaseAssetURL "junegunn/fzf" (printf "fzf-*-%s_%s.tar.gz" .chezmoi.os .chezmoi.arch) | quote }}
  executable = true
  path = "fzf"

[".local/bin/git-cliff"]
  type = "archive-file"
  url  = {{ gitHubLatestReleaseAssetURL "orhun/git-cliff" (printf "git-cliff-*-x86_64-unknown-%s-musl.tar.gz" .chezmoi.os) | quote }}
  executable = true
  stripComponents = 1
  path = "git-cliff"

{{- $glowVersionTag := (gitHubLatestRelease "charmbracelet/glow").TagName }}
[".local/bin/glow"]
  type = "archive-file"
  url = "https://github.com/charmbracelet/glow/releases/download/{{ $glowVersionTag }}/glow_Linux_x86_64.tar.gz"
  executable = true
  path = "glow"

{{- $hexlixVersionTag := (gitHubLatestRelease "helix-editor/helix").TagName }}
[".local/bin/helix"]
  type = "file"
  url = "https://github.com/helix-editor/helix/releases/download/{{ $hexlixVersionTag }}/helix-{{ $hexlixVersionTag }}-x86_64.AppImage"
  executable = true

[".local/bin/lazygit"]
  type = "archive-file"
  url = {{ gitHubLatestReleaseAssetURL "jesseduffield/lazygit" (printf "lazygit_*_Linux_x86_64.tar.gz") | quote}}
  executable = true
  path = "lazygit"

{{- $lazydockerVersionTag := (gitHubLatestRelease "jesseduffield/lazydocker").TagName  }}
{{- $lazydockerStripVersionTag := $lazydockerVersionTag | trimPrefix "v"  }}
