  executable = true
  path = "lazysql"

{{- $rustfmtVesrionTag := (gitHubLatestRelease "rust-lang/rustfmt").TagName }}
[".local/bin/rustfmt"]
  type = "file"
  url = "https://github.com/rust-lang/rustfmt/releases/download/{{ $rustfmtVesrionTag }}/rustfmt_{{ .chezmoi.os }}-x86_64_{{ $rustfmtVesrionTag }}.tar.gz"
  executable = true
  stripComponents = 1
  path = "rustfmt"

{{- $starshipVersionTag := (gitHubLatestRelease "starship/starship").TagName }}
[".local/bin/starship"]
  type = "archive-file"
  url = "https://github.com/starship/starship/releases/download/{{ $starshipVersionTag }}/starship-x86_64-unknown-{{ .chezmoi.os }}-musl.tar.gz"
  executable = true
  path = "starship"

{{- $tldrVersionTag := (gitHubLatestRelease "dbrgn/tealdeer").TagName }}
