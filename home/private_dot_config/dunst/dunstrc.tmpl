[global]
    ### Display ###
    monitor = 0
    follow = mouse

    ### Geometry ###
    width = (300, 400)
    height = 300
    origin = top-right
    offset = 15x50

    scale = 0
    notification_limit = 5

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 400
    progress_bar_corner_radius = 5

    indicate_hidden = yes
    transparency = 0
    separator_height = 2
    padding = 12
    horizontal_padding = 12
    text_icon_padding = 0
    frame_width = 2
    frame_color = {{ .colorScheme.blue | quote }}
    gap_size = 5
    separator_color = frame
    sort = yes

    ### Text ###
    font = {{ .font.regular }} 11
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    enable_recursive_icon_lookup = true
    icon_theme = Papirus-Dark, Adwaita
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64
    icon_corner_radius = 5

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 10
    ignore_dbusclose = false

    ### Mouse ###
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = {{ .colorScheme.base | quote }}
    foreground = {{ .colorScheme.text | quote }}
    frame_color = {{ .colorScheme.green | quote }}
    timeout = 5

[urgency_normal]
    background = {{ .colorScheme.base | quote }}
    foreground = {{ .colorScheme.text | quote }}
    frame_color = {{ .colorScheme.peach | quote }}
    timeout = 10

[urgency_critical]
    background = {{ .colorScheme.base | quote }}
    foreground = {{ .colorScheme.text | quote }}
    frame_color = {{ .colorScheme.red | quote }}
    timeout = 0

# vim:ft=cfg
