#!/usr/bin/env bash
# vim: set expandtab ts=4 sw=4 ft=bash:
set -euo pipefail

# brew package
packages=(
    bat
    bat-extras
    diffr # better git-diff alternative is difftastic
    direnv
    editorconfig
    fd
    fzf
    git-delta # better git-diff
    glow
    helix
    jq
    lazydocker
    lazygit
    neovim
    ranger
    ripgrep
    starship
    tealdeer
    tmux
    tree
    wget
    zellij
    zoxide
)

# some measureing tools
packages+=(
    btop
    htop
)

# pyenv dependency
packages+=(
    openssl
    readline
    sqlite3
    xz
    zlib
    tcl-tk
)

# some cask packages
casks=(
    bitwarden
    nextcloud
    obsidian
    syncthing
    visual-studio-code
    wezterm
)

############################
# Installation starts here #
############################

# install all the packages
brew install ${packages[@]}
brew install --cask ${casks[@]}
