#!/usr/bin/env bash
set -euo pipefail

# if arch based system
{{- if lookPath "pacman" }}
# bootstrapping archlinux
packages=(
    inotify-tools
    lightdm # consider switching with sdm
    lightdm-gtk-greeter
    picom
    xorg-server
    xorg-xinit
    xorg-xmessage
    xorg-xprop
    xorg-xrdb
    xorg-xset
    xorg-xsetroot
)

# hardware bring ups like network, audio, graphics, printers
packages+=(
    bluez
    bluez-utils
    cups
    network-manager-applet
    networkmanager # its already installed but lets keep it here
    pulseaudio
    volumeicon
    xdotool
    xf86-video-intel # I know I will be using it on laptop
)

# xmonad setup
packages+=(
    rofi  # or dmenu
    trayer
    xmobar
    xmonad
    xmonad-contrib
)

# some visual packages like fonts, themes, icons etc
packages+=(
    adobe-source-code-pro-fonts
    adobe-source-sans-fonts
    otf-font-awesome
    ttf-joypixels
    ttf-ubuntu-font-family
    xwallpaper
)

# some usefule packages
packages+=(
    alacritty
    aspell
    aspell-en
    conky
    cmake
    curl
    dialog
    direnv
    dunst
    fd
    ffmpegthumbnailer
    firefox
    fontconfig
    fzf
    git
    gnupg
    htop
    iftop
    imagemagick
    jq
    kitty
    light
    mpc
    mpd
    mpv
    ncmpcpp
    neovim
    nitrogen
    pacman-contrib
    powertop
    ranger
    ranger
    ripgrep
    scrot
    shellcheck
    sqlite
    stylua
    sxiv
    tar
    tlp
    tmux
    unzip
    wget
    xclip
    zathura
    zathura-pdf-mupdf
    zsh
)

# python build packages
# Arch linux does supports latest python but I will stick to pyenv
packages+=(
    base-devel
    openssl
    tk
    xz
    zlib
)
# aur packages
packages_aur=(
    cava
    i3lock-color
    otf-raleway
    ttf-mononoki
    ttf-ms-fonts
    tlpui
)

{{ if eq .emacs true }}
# for arch linux emacs-nativecomp is available
packages+=(
    emacs-nativecomp
)
{{ end -}}

# install all the packages
sudo pacman -S --noconfirm --needed ${packages[@]}

# some variable
echo "local bin directory setup"
LOCALBIN=$HOME/.local/bin
[ -d "$LOCALBIN" ] && echo "directory exists" || mkdir -p $LOCALBIN

echo "set ZSH to default"
if [ "$SHELL" != "/usr/bin/zsh" ]; then
    sudo chsh -s $(which zsh) $USER
fi


echo "YAY installation"
if [ ! -x "$(command -v yay)" ]; then
    git clone https://aur.archlinux.org/yay-git.git ~/Downloads/yay-git
    cd ~/Downloads/yay-git
    makepkg -si
    cd ~
fi
yay -S --nocleanmenu --nodiffmenu --removemake --norebuild --noredownload ${packages_aur[@]}
{{- end }}
